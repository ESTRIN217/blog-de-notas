<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:fitsSystemWindows="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="60dp">
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorSurfaceContainer"
        app:elevation="0dp"
        android:id="@+id/topBar"
        app:layout_constraintTop_toTopOf="parent">
        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            >

            <Button
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                app:icon="@drawable/arrow_back_24px"
                android:contentDescription="@string/volver_atras"
                style="?attr/materialIconButtonStyle"
                android:id="@+id/back" />

            <Space
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_weight="1" />

            <Button
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                app:icon="@drawable/undo_24px"
                android:contentDescription="@string/deshacer"
                style="?attr/materialIconButtonStyle"
                android:id="@+id/undo" />

            <Button
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                app:icon="@drawable/redo_24px"
                android:contentDescription="@string/rehacer"
                style="?attr/materialIconButtonStyle"
                android:id="@+id/redo" />

            <Button
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                app:icon="@drawable/outline_done"
                style="?attr/materialIconButtonStyle"
                android:id="@+id/btnDone" />

            <Button
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                app:icon="@drawable/more_vert"
                android:contentDescription="@string/mas_opciones"
                style="?attr/materialIconButtonStyle"
                android:id="@+id/more" />

        </LinearLayout>
</com.google.android.material.appbar.AppBarLayout>

        <com.Jhon.myempty.blogdenotasjava.LienzoView
            android:layout_height="0dp"
            android:layout_width="0dp"
            android:background="@android:color/white"
            android:layout_weight="1"
            android:id="@+id/lienzo"
            app:layout_constraintTop_toBottomOf="@id/topBar"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
        />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <LinearLayout
        android:id="@+id/bottom_sheet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background"
        android:orientation="vertical"
        android:elevation="16dp"
        app:behavior_hideable="false"
        app:behavior_peekHeight="40dp"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabLayoutHerramientas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tabMode="fixed"
            app:tabGravity="fill" />

<LinearLayout
            android:id="@+id/panelControles"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnAccionDeseleccionar"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Deseleccionar todo"
                android:textColor="?attr/colorPrimary"
                android:visibility="gone"
                app:iconGravity="textStart"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnAccionBorrarLienzo"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Borrar todo el lienzo"
                android:textColor="?attr/colorError"
                android:visibility="gone"
                app:icon="@drawable/delete_24px"
                app:iconGravity="textStart"/>

            <LinearLayout
                android:id="@+id/seccionColores"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Colores"
                    android:layout_marginBottom="8dp"
                    android:textStyle="bold" />

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="none">

                    <LinearLayout
                        android:id="@+id/contenedorColores"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                        </LinearLayout>
                </HorizontalScrollView>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="16dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Grosor del trazo"
                android:textStyle="bold" />

            <com.google.android.material.slider.Slider
                android:id="@+id/sliderGrosor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:valueFrom="1.0"
                android:valueTo="80.0"
                android:stepSize="1.0" />

        </LinearLayout>

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
