<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
     xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:app="http://schemas.android.com/apk/res-auto"
     android:layout_height="match_parent"
     android:layout_width="match_parent"
     android:background="?attr/colorSurfaceContainer"
     android:orientation="vertical"
     android:fitsSystemWindows="true">

    <LinearLayout
         android:layout_height="wrap_content"
         android:layout_width="match_parent"
         android:orientation="horizontal">

        <Button
             android:layout_height="wrap_content"
             android:layout_width="wrap_content"
             app:icon="@drawable/arrow_back_24px"
             android:contentDescription="Volver atrÃ¡s"
             style="?attr/materialIconButtonStyle"
             android:id="@+id/back" />

        <Space
             android:layout_height="wrap_content"
             android:layout_width="wrap_content"
             android:layout_weight="1" />

        <ImageView
             android:layout_height="48dp"
             android:layout_width="48dp"
             android:src="@drawable/outline_done"
             android:background="?attr/selectableItemBackgroundBorderless"
             android:padding="12dp"
             android:id="@+id/btnDone" />

        <ImageView
             android:layout_height="48dp"
             android:layout_width="48dp"
             android:src="@drawable/undo_24px"
             android:background="?attr/selectableItemBackgroundBorderless"
             android:padding="12dp"
             android:id="@+id/undo" />

        <ImageView
             android:layout_height="48dp"
             android:layout_width="48dp"
             android:src="@drawable/redo_24px"
             android:background="?attr/selectableItemBackgroundBorderless"
             android:padding="12dp"
             android:id="@+id/redo" />

        <ImageView
             android:layout_height="48dp"
             android:layout_width="48dp"
             android:src="@drawable/more_vert"
             android:background="?attr/selectableItemBackgroundBorderless"
             android:padding="12dp"
             android:id="@+id/more" />

    </LinearLayout>

    <com.Jhon.myempty.blogdenotasjava.LienzoView
         android:layout_height="0dp"
         android:layout_width="match_parent"
         android:background="@android:color/white"
         android:layout_weight="1"
         android:id="@+id/lienzo" />

    <LinearLayout
         android:layout_height="wrap_content"
         android:layout_width="match_parent"
         android:gravity="center"
         android:background="?attr/colorSurfaceContainer"
         android:elevation="8dp"
         android:padding="10dp"
         android:orientation="horizontal">

        <ImageView
             android:layout_height="48dp"
             android:layout_width="48dp"
             android:src="@drawable/round_border_bottom"
             android:layout_marginEnd="16dp"
             android:background="?attr/selectableItemBackgroundBorderless"
             android:padding="14dp"
             android:id="@+id/btnSelect" />

        <ImageView
             android:layout_height="48dp"
             android:layout_width="48dp"
             android:src="@drawable/auto_fix_high"
             android:layout_marginEnd="16dp"
             android:background="?attr/selectableItemBackgroundBorderless"
             android:padding="14dp"
             android:id="@+id/btnEraser" />

        <ImageView
             android:layout_height="48dp"
             android:layout_width="48dp"
             android:src="@drawable/round_edit"
             android:layout_marginEnd="16dp"
             android:background="?attr/selectableItemBackgroundBorderless"
             android:padding="14dp"
             android:id="@+id/btnPen" />

        <ImageView
             android:layout_height="48dp"
             android:layout_width="48dp"
             android:src="@drawable/round_brush"
             android:layout_marginEnd="16dp"
             android:background="?attr/selectableItemBackgroundBorderless"
             android:padding="14dp"
             android:id="@+id/btnMarker" />

        <ImageView
             android:layout_height="48dp"
             android:layout_width="48dp"
             android:src="@drawable/outline_edit"
             android:background="?attr/selectableItemBackgroundBorderless"
             android:padding="14dp"
             android:id="@+id/btnResaltador" />

    </LinearLayout>

</LinearLayout>