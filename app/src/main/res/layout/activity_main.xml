<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
     xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:app="http://schemas.android.com/apk/res-auto"
     android:layout_height="match_parent"
     android:layout_width="match_parent"
     android:background="?attr/colorSurfaceContainer"
     android:id="@+id/drawer_layout">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
         android:layout_height="match_parent"
         android:layout_width="match_parent"
         android:fitsSystemWindows="true">

        <com.google.android.material.appbar.AppBarLayout
             android:layout_height="wrap_content"
             android:layout_width="match_parent"
             android:background="?attr/colorSurfaceContainer"
             app:elevation="0dp">

            <LinearLayout
                 android:layout_height="wrap_content"
                 android:layout_width="match_parent"
                 android:gravity="center_vertical"
                 app:layout_scrollFlags="scroll|enterAlways"
                 android:paddingVertical="8dp"
                 android:orientation="horizontal"
                 android:paddingHorizontal="12dp">

                <Button
                     android:layout_height="48dp"
                     android:layout_width="48dp"
                     app:icon="@drawable/menu_24px"
                     style="?attr/materialIconButtonStyle"
                     android:id="@+id/navegation_menu" />

                <com.google.android.material.textfield.TextInputLayout
                     android:layout_height="wrap_content"
                     android:layout_width="0dp"
                     app:hintEnabled="false"
                     app:boxCornerRadiusBottomEnd="28dp"
                     app:boxCornerRadiusTopStart="28dp"
                     app:boxStrokeWidth="0dp"
                     app:boxCornerRadiusTopEnd="28dp"
                     app:endIconMode="clear_text"
                     android:layout_marginHorizontal="8dp"
                     app:boxCornerRadiusBottomStart="28dp"
                     app:boxStrokeWidthFocused="0dp"
                     app:boxBackgroundColor="?attr/colorSurfaceVariant"
                     app:startIconDrawable="@drawable/search_24px"
                     android:layout_weight="1">

                    <com.google.android.material.textfield.TextInputEditText
                         android:layout_height="wrap_content"
                         android:layout_width="match_parent"
                         android:background="@android:color/transparent"
                         android:hint="@string/buscar_nota"
                         android:paddingVertical="12dp"
                         android:maxLines="1"
                         android:inputType="text"
                         android:id="@+id/buscar" />

                </com.google.android.material.textfield.TextInputLayout>

                <Button
                     android:layout_height="48dp"
                     android:layout_width="48dp"
                     app:icon="@drawable/outline_view_agenda"
                     android:contentDescription="@string/modoVistaTargeta"
                     app:iconTint="?attr/colorOnSurface"
                     style="?attr/materialIconButtonStyle"
                     android:id="@+id/modoVistaTargeta" />

                <Button
                     android:layout_height="48dp"
                     android:layout_width="48dp"
                     app:icon="@drawable/import_export"
                     style="?attr/materialIconButtonStyle"
                     android:id="@+id/orden" />

            </LinearLayout>

        </com.google.android.material.appbar.AppBarLayout>

        <androidx.recyclerview.widget.RecyclerView
             android:layout_height="match_parent"
             android:layout_width="match_parent"
             app:layout_behavior="@string/appbar_scrolling_view_behavior"
             android:paddingBottom="88dp"
             android:clipToPadding="false"
             android:id="@+id/recyclerNotas" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
             android:layout_height="wrap_content"
             android:layout_width="wrap_content"
             android:contentDescription="@string/m3_expressive_primary_fab_content_description"
             android:layout_margin="16dp"
             app:srcCompat="@drawable/add_24px"
             android:id="@+id/btnNuevaNota"
             android:layout_gravity="bottom|end" />

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <com.google.android.material.navigation.NavigationView
         android:layout_height="match_parent"
         android:layout_width="wrap_content"
         app:menu="@menu/navigationdrawer_menu"
         app:headerLayout="@layout/navigationdrawer_header"
         android:id="@+id/navigation_view_start"
         android:layout_gravity="start">

    </com.google.android.material.navigation.NavigationView>

</androidx.drawerlayout.widget.DrawerLayout>