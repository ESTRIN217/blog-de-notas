<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
     xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:app="http://schemas.android.com/apk/res-auto"
     android:layout_height="wrap_content"
     android:layout_width="match_parent"
     android:background="?attr/colorSurfaceContainer"
     android:padding="16dp"
     android:orientation="vertical">

    <com.google.android.material.textview.MaterialTextView
         android:layout_height="wrap_content"
         android:layout_width="wrap_content"
         android:layout_marginBottom="8dp"
         android:textSize="16sp"
         android:text="@string/color_de_fondo"
         android:textStyle="bold" />

    <HorizontalScrollView
         android:layout_height="wrap_content"
         android:layout_width="match_parent"
         android:scrollbars="none">

        <LinearLayout
             android:layout_height="wrap_content"
             android:layout_width="wrap_content"
             android:orientation="horizontal"
             android:id="@+id/contenedorColoresFondo">

            <ImageView
                 android:layout_height="50dp"
                 android:layout_width="50dp"
                 android:src="@drawable/invert_colors_off"
                 android:layout_marginEnd="12dp"
                 android:background="@drawable/borde_redondeado"
                 android:padding="10dp"
                 android:id="@+id/color_default" />

        </LinearLayout>

    </HorizontalScrollView>

    <View
         android:layout_height="1dp"
         android:layout_width="match_parent"
         android:layout_marginVertical="16dp"
         android:background="?android:attr/listDivider" />

    <com.google.android.material.textview.MaterialTextView
         android:layout_height="wrap_content"
         android:layout_width="wrap_content"
         android:layout_marginBottom="8dp"
         android:textSize="16sp"
         android:text="Textura / Imagen"
         android:textStyle="bold" />

    <HorizontalScrollView
         android:layout_height="wrap_content"
         android:layout_width="match_parent"
         android:scrollbars="none">

        <LinearLayout
             android:layout_height="wrap_content"
             android:layout_width="wrap_content"
             android:orientation="horizontal"
             android:id="@+id/contenedorTexturas">

            <LinearLayout
                 android:layout_height="wrap_content"
                 android:layout_width="wrap_content"
                 android:layout_marginEnd="12dp"
                 android:gravity="center"
                 android:orientation="vertical"
                 android:id="@+id/btnAbrirGaleriaFondo">

                <ImageView
                     android:layout_height="50dp"
                     android:layout_width="50dp"
                     android:src="@drawable/outline_image_not_supported"
                     android:background="@drawable/borde_redondeado"
                     android:padding="12dp" />

                <com.google.android.material.textview.MaterialTextView
                     android:layout_height="wrap_content"
                     android:layout_width="wrap_content"
                     android:textSize="10sp"
                     android:text="GalerÃ­a" />

            </LinearLayout>

            <ImageView
                 android:layout_height="50dp"
                 android:layout_width="50dp"
                 android:layout_marginEnd="12dp"
                 android:background="@drawable/circle"
                 android:elevation="2dp"
                 android:id="@+id/fondo_papel" />

        </LinearLayout>

    </HorizontalScrollView>

</LinearLayout>