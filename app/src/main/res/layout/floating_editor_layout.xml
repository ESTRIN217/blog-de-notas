<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
     xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:app="http://schemas.android.com/apk/res-auto"
     android:layout_height="match_parent"
     android:layout_width="match_parent"
     android:background="@drawable/bg_floating_window"
     android:elevation="8dp">

    <View
         android:layout_height="48dp"
         android:layout_width="0dp"
         android:background="?attr/colorPrimary"
         app:layout_constraintTop_toTopOf="parent"
         app:layout_constraintStart_toStartOf="parent"
         app:layout_constraintEnd_toEndOf="parent"
         android:id="@+id/floating_header" />

    <com.google.android.material.textview.MaterialTextView
         android:layout_height="wrap_content"
         android:layout_width="0dp"
         android:layout_marginEnd="8dp"
         android:ellipsize="end"
         android:textSize="16sp"
         android:textColor="?attr/colorOnPrimary"
         app:layout_constraintEnd_toStartOf="@id/lbl_contador_floating"
         app:layout_constraintBottom_toBottomOf="@id/floating_header"
         app:layout_constraintTop_toTopOf="@id/floating_header"
         app:layout_constraintStart_toStartOf="parent"
         android:maxLines="1"
         android:id="@+id/floating_title_text"
         android:text="Nota Rápida"
         android:textStyle="bold" />

    <com.google.android.material.textview.MaterialTextView
         android:layout_height="wrap_content"
         android:layout_width="wrap_content"
         android:layout_marginEnd="8dp"
         android:alpha="0.8"
         app:layout_constraintTop_toTopOf="@id/floating_header"
         android:textSize="12sp"
         android:textColor="?attr/colorOnPrimary"
         app:layout_constraintEnd_toStartOf="@id/modify"
         app:layout_constraintBottom_toBottomOf="@id/floating_header"
         android:id="@+id/lbl_contador_floating"
         android:text="0p | 0c" />



    <ImageView
         android:layout_height="32dp"
         android:layout_width="32dp"
         android:layout_marginEnd="4dp"
         android:contentDescription="Abrir en pantalla completa"
         android:src="@drawable/open_in_full_24px"
         app:layout_constraintTop_toTopOf="@id/floating_header"
         android:padding="6dp"
         app:tint="?attr/colorOnPrimary"
         app:layout_constraintEnd_toStartOf="@id/btn_close_floating"
         app:layout_constraintBottom_toBottomOf="@id/floating_header"
         android:id="@+id/modify" />

    <ImageView
         android:layout_height="32dp"
         android:layout_width="32dp"
         android:layout_marginEnd="8dp"
         android:contentDescription="Cerrar nota flotante"
         android:src="@drawable/close_24px"
         app:layout_constraintTop_toTopOf="@id/floating_header"
         android:padding="4dp"
         app:tint="?attr/colorOnPrimary"
         app:layout_constraintEnd_toEndOf="parent"
         app:layout_constraintBottom_toBottomOf="@id/floating_header"
         android:id="@+id/btn_close_floating" />

    <EditText
         android:layout_height="0dp"
         android:layout_width="0dp"
         android:padding="16dp"
         android:importantForAutofill="no"
         android:textSize="16sp"
         android:textColor="?attr/colorOnSurface"
         app:layout_constraintBottom_toTopOf="@id/resize_handle"
         app:layout_constraintTop_toBottomOf="@id/floating_header"
         android:background="@android:color/transparent"
         android:gravity="top|start"
         android:hint="Escribe aquí..."
         android:textColorHint="?attr/colorOnSurfaceVariant"
         app:layout_constraintStart_toStartOf="parent"
         app:layout_constraintEnd_toEndOf="parent"
         android:inputType="textMultiLine|textCapSentences"
         android:id="@+id/floating_txtNota" />

    <androidx.constraintlayout.widget.ConstraintLayout
         android:layout_height="24dp"
         android:layout_width="0dp"
         android:background="?attr/colorSurfaceVariant"
         android:clickable="true"
         app:layout_constraintStart_toStartOf="parent"
         app:layout_constraintEnd_toEndOf="parent"
         app:layout_constraintBottom_toBottomOf="parent"
         android:focusable="true"
         android:id="@+id/resize_handle">

        <ImageView
             android:layout_height="wrap_content"
             android:layout_width="wrap_content"
             android:src="@drawable/drag_handle_24px"
             app:layout_constraintTop_toTopOf="parent"
             app:tint="?attr/colorOnSurfaceVariant"
             app:layout_constraintStart_toStartOf="parent"
             app:layout_constraintEnd_toEndOf="parent"
             app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>