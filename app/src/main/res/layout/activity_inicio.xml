<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:id="@+id/coordinator">

    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:gravity="center"
        android:padding="24dp"
        android:orientation="vertical">

        <com.google.android.material.textview.MaterialTextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="@string/configuraciÃ³n_de_permisos"
            android:textAppearance="?attr/textAppearanceHeadlineSmall"
            android:layout_marginBottom="24dp" />

        <com.google.android.material.materialswitch.MaterialSwitch
            android:id="@+id/swNotificaciones"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="@string/notificaciones"
            app:thumbIcon="@drawable/close_24px"/>

        <com.google.android.material.materialswitch.MaterialSwitch
            android:id="@+id/swMicrofono"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="@string/microfono"
            app:thumbIcon="@drawable/close_24px"
            />

        <com.google.android.material.materialswitch.MaterialSwitch
            android:id="@+id/swCamara"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="@string/camara"
            app:thumbIcon="@drawable/close_24px"/>

        <com.google.android.material.divider.MaterialDivider
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="24dp"/>

        <com.google.android.material.textview.MaterialTextView
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="@string/ubicacion_de_notas"
            android:textAppearance="?attr/textAppearanceTitleMedium" />

        <com.google.android.material.textview.MaterialTextView
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="@string/seleccione_la_carpeta"
            android:textAppearance="?attr/textAppearanceBodyMedium"
            android:layout_marginBottom="16dp" />

        <Button
            style="?attr/materialButtonTonalStyle"
            android:id="@+id/btnSeleccionarCarpeta"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="@string/seleccionar_carpeta" 
            app:icon="@drawable/folder_open"/>

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:padding="16dp">

        <Button
            android:id="@+id/btnSiguiente"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="@string/comenzar"
            style="?attr/materialButtonStyle" />
    </FrameLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>