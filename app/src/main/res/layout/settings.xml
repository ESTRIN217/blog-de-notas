<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="?attr/android:colorBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp">

        <ImageView
            android:id="@+id/btnAtrasSettings"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Volver atr치s"
            android:padding="12dp"
            android:src="@drawable/arrow_back_24px"
            app:tint="?attr/colorOnSurface" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tituloSettings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="@string/opciones_de_configuraci칩n"
            android:textColor="?attr/colorOnSurface"
            android:textSize="22sp"
            android:textStyle="bold" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/switchMaterialTheme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:text="@string/material_you"
                android:textColor="?attr/colorOnSurface"
                android:textSize="18sp" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/lblTemaApp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/opciones_de_apariencia"
                android:textColor="?attr/colorPrimary"
                android:textSize="14sp"
                android:textStyle="bold" />

            <RadioGroup
                android:id="@+id/grupoTema"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">

                <RadioButton
                    android:id="@+id/rbClaro"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/claro"
                    android:textColor="?attr/colorOnSurface" />

                <RadioButton
                    android:id="@+id/rbOscuro"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/oscuro"
                    android:textColor="?attr/colorOnSurface" />

                <RadioButton
                    android:id="@+id/rbSistema"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/usar_configuraci칩n_del_sistema"
                    android:textColor="?attr/colorOnSurface" />
            </RadioGroup>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="24dp"
                android:background="?attr/colorOutlineVariant" />

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/editor_de_texto"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="?attr/colorOnSurface"
                android:layout_marginBottom="16dp"/>

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tama침o_de_letra"
                android:textColor="?attr/colorPrimary"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtMuestraTamano"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/texto_de_ejemplo"
                android:gravity="center"
                android:padding="16dp"
                android:layout_marginVertical="8dp"
                android:background="?attr/colorSurfaceVariant"
                android:textColor="?attr/colorOnSurfaceVariant"/>

            <com.google.android.material.slider.Slider
                android:id="@+id/sliderTamano"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:valueFrom="12.0"
                android:valueTo="32.0"
                android:stepSize="2.0"
                android:value="16.0"/>

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/color_de_fondo"
                android:textColor="?attr/colorPrimary"
                android:textStyle="bold"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"/>

            <RadioGroup
                android:id="@+id/radioGroupColores"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/rbBlanco"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/sistema"
                    android:textColor="?attr/colorOnSurface"/>

                <RadioButton
                    android:id="@+id/rbPapel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/papel"
                    android:textColor="?attr/colorOnSurface"/>

                <RadioButton
                    android:id="@+id/rbNegro"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/alto_contraste"
                    android:textColor="?attr/colorOnSurface"/>
            </RadioGroup>

            <View android:layout_width="match_parent" android:layout_height="50dp"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>