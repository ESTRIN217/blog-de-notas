<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface"
    android:id="@+id/background"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/barraSuperior"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorSurface"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingHorizontal="8dp"
        app:elevation="4dp">

        <ImageView
            android:id="@+id/btnAtras"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Volver atrás"
            android:padding="12dp"
            android:src="@drawable/arrow_back_24px"
            app:tint="?attr/colorOnSurface" />

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingStart="12dp"
            android:text="@string/editor_de_notas"
            android:textColor="?attr/colorOnSurface"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/btnDeshacer"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="12dp"
            android:src="@drawable/undo_24px"
            app:tint="?attr/colorOnSurface" />

        <ImageView
            android:id="@+id/btnRehacer"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="12dp"
            android:src="@drawable/redo_24px"
            app:tint="?attr/colorOnSurface" />

        <ImageView
            android:id="@+id/btnGuardar"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="12dp"
            android:src="@drawable/save_24px"
            app:tint="?attr/colorPrimary" /> <ImageView
            android:id="@+id/menu"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="12dp"
            android:src="@drawable/menu_24px"
            app:tint="?attr/colorOnSurface" />
    </LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginTop="16dp"
    android:layout_marginBottom="8dp"
    android:orientation="vertical"
    android:padding="16dp">

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/txtTitulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:hint="Título de la nota"
        android:inputType="textCapSentences|textMultiLine"
        android:maxLines="2"
        android:padding="0dp"
        android:textColor="?attr/colorOnSurface"
        android:textColorHint="?attr/colorOnSurfaceVariant"
        android:textSize="24sp"
        android:textStyle="bold" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/fecha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="30 de diciembre, 2025"
        android:textColor="?attr/colorOnSurfaceVariant"
        android:textSize="13sp"
        android:letterSpacing="0.05" />

</LinearLayout>

<com.google.android.material.textfield.TextInputEditText
    android:id="@+id/txtNota"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    android:layout_marginHorizontal="16dp"
    android:layout_marginBottom="16dp"
    android:gravity="top|start"
    android:hint="Comienza a escribir..."
    android:inputType="textMultiLine|textCapSentences"
    android:padding="16dp"
    android:scrollbars="vertical"
    android:textColor="?attr/colorOnSurface"
    android:textColorHint="?attr/colorOnSurfaceVariant"
    android:textSize="18sp" />
</LinearLayout>